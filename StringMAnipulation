package test2;
import java.util.*;
public class Manipulation {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        sc.nextLine();
        String str = sc.nextLine();
        String result="";
        for(int i=0;i<n;i++){
            result = result + str;
        }
        result = result.toUpperCase();
        System.out.println(result);
        System.out.println(result.length());
    }
}
